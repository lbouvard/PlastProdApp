<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.plastprod.plastprodapp.FormulaireClient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/adresse_mail"
            android:textColor="@color/noir"
            android:labelFor="@+id/etMail"
            android:id="@+id/tvMail"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/etMail"
            android:layout_below="@+id/tvMail"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/form_client_adresse"
            android:textColor="@color/noir"
            android:id="@+id/tvDomaine"
            android:layout_below="@+id/etMail"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/etDomaine"
            android:layout_below="@+id/tvDomaine"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/btn_annuler"
            android:id="@+id/btn_annuler"
            android:layout_below="@+id/etDomaine"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_carre_blanc"
            android:clickable="true"
            android:textColor="@color/gris_fonce"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:onClick="annulerModification"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/btn_enregistre"
            android:id="@+id/btn_enregistrer"
            android:layout_below="@+id/etDomaine"
            android:layout_toEndOf="@+id/btn_annuler"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/btn_carre_orange"
            android:clickable="true"
            android:textColor="@color/blanc"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:onClick="enregistrerModification"/>

</RelativeLayout>

