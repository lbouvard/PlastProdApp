<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.plastprod.plastprodapp.AdminActivity">

    <TextView android:text="@string/synchro_admin"
        android:id="@+id/textpremier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/synchroniser"
        android:id="@+id/btn_syncro"
        android:layout_below="@+id/textpremier"
        android:layout_marginTop="40dp"
        android:paddingStart="10dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:textColor="@color/blanc"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginStart="80dp"
        android:drawableStart="@drawable/ic_sync_white_24dp"
        android:onClick="synchroniser_first" />

</RelativeLayout>
