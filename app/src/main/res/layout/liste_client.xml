<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icone_commercial"
        android:orientation="horizontal"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgUser"
            android:background="@drawable/pastille_client"
            android:contentDescription="@string/logo" />
    </LinearLayout>

    <TextView
        android:id="@+id/nom_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/icone_commercial"
        android:layout_toEndOf="@+id/icone_commercial"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/noir"
        android:layout_marginStart="16sp"
        android:text="Client 1"/>

    <TextView
        android:id="@+id/adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/icone_commercial"
        android:layout_below="@+id/nom_client"
        android:text="Adresse"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/gris_fonce"
        android:layout_marginStart="16sp"/>

    <TextView
        android:id="@+id/nb_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/noir"
        android:text="2"/>

</RelativeLayout>