<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.plastprod.plastprodapp.AffichageCommandeActivity"
    android:id="@+id/LayBon">

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse"
                    android:id="@+id/datecommande"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="34dp"
                    android:layout_below="@+id/etatc"
                    android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Societe"
                        android:id="@+id/nomsociete"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/datecommande"
                        android:layout_alignStart="@+id/datecommande" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adresse"
                        android:id="@+id/adresse"
                        android:layout_marginStart="45dp"
                        android:layout_alignTop="@+id/nomsociete"
                        android:layout_alignStart="@+id/etatc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CP"
                        android:id="@+id/codepostal"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/adresse"
                        android:layout_alignStart="@+id/adresse" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ville"
                        android:id="@+id/ville"
                        android:layout_alignTop="@+id/codepostal"
                        android:layout_toEndOf="@+id/codepostal"
                        android:layout_marginStart="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auteur"
                        android:id="@+id/auteur"
                        android:layout_alignTop="@+id/codepostal"
                        android:layout_alignStart="@+id/nomsociete" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Etat"
                        android:id="@+id/etatc"
                        android:layout_marginTop="36dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/liste_affichage_commande"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/codepostal"
                        android:layout_alignParentStart="true" />

</RelativeLayout>
