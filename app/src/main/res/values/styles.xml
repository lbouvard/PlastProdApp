<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/PlastProdBar</item>
        <item name="android:actionBarTabTextStyle">@style/Onglet</item>
        <item name="android:actionMenuTextColor">@color/blanc</item>

        <item name="actionBarStyle">@style/PlastProdBar</item>
        <item name="actionBarTabTextStyle">@style/Onglet</item>
        <item name="actionMenuTextColor">@color/blanc</item>

        <item name="actionModeStyle">@style/actionMode</item>
    </style>

    <!-- general styles for the action bar -->
    <style name="PlastProdBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/PlastProdText</item>
        <item name="android:background">@color/orange</item>

        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/PlastProdText</item>
        <item name="background">@color/orange</item>
    </style>

    <!-- action bar title text -->
    <style name="PlastProdText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blanc</item>
    </style>

    <!-- action bar tab text -->
    <style name="Onglet" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/blanc</item>
    </style>

    <style name="actionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/orange</item>
    </style>

    <style name="Tableau">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:layout_marginBottom">20sp</item>
    </style>

    <style name="EnTete_Tableau">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="Cellule_EnTete_Tableau">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blanc</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">-2dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/entete_tab</item>
    </style>

    <style name="Ligne_Tableau">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">-2dp</item>
    </style>

    <style name="Derniere_Ligne_Tableau">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Cellule_Ligne_Tableau">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/ligne_tab</item>
    </style>

    <style name="Cellule_Ligne_Tableau_Centre">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">-2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/ligne_tab</item>
    </style>

    <style name="Graphique_Layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">400sp</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">10sp</item>
    </style>

    <style name="separateur">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:background">@drawable/separation</item>
    </style>

</resources>
